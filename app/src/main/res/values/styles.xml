<resources>
    <!-- Custom button style -->
    <style name="button_fill" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/sora_semibold</item>
        <item name="android:padding">16dp</item>
        <item name="android:letterSpacing">-0.015</item>
    </style>
    <style name="input_form_outline">
        <item name="android:background">@drawable/form_outline</item>
        <item name="boxStrokeColor">@color/gray_outline</item> <!-- Define color_outline in your colors.xml -->
        <item name="android:fontFamily">@font/sora_regular</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TextInputEditTextStyle" parent="input_form_outline">
        <!-- Add any additional attributes specific to TextInputEditText here -->
    </style>
</resources>
