<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_up_background"
    android:paddingTop="15dp"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/iv_illust_history"
        android:layout_width="190dp"
        android:layout_height="215dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/illustration_sos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mental_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sora_bold"
        android:text="Kamu terdeteksi terjatuh!"
        android:textColor="@color/red_900"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_illust_history"
        app:layout_constraintStart_toStartOf="@+id/iv_illust_history"
        app:layout_constraintTop_toBottomOf="@+id/iv_illust_history" />

    <TextView
        android:id="@+id/messageTextSOSView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sora_regular"
        android:gravity="center_horizontal"
        android:text="Sensor aplikasi mendeteksi gerakan yang tidak wajar di HP-mu, sinyal SOS sudah dikirim ke pihak berwenang terdekat!"
        android:textColor="@color/gray_900"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/tv_mental_health"
        app:layout_constraintStart_toStartOf="@id/tv_mental_health"
        app:layout_constraintTop_toBottomOf="@+id/tv_mental_health" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="12sp"
        android:fontFamily="@font/sora_semibold"
        android:padding="8dp"
        android:text="Kembali"
        android:textSize="12sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/messageTextSOSView"
        app:layout_constraintStart_toStartOf="@+id/messageTextSOSView"
        app:layout_constraintTop_toBottomOf="@+id/messageTextSOSView" />

</androidx.constraintlayout.widget.ConstraintLayout>